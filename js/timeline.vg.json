{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 300,
    "config": {
        "title": {
            "color": "white"
        },
        "axis": {
            "titleColor": "white",
            "labelColor": "white",
            "gridColor": "white",
            "domainColor": "white",
            "tickColor": "white"
        },
        "legend": {
            "titleColor": "white",
            "labelColor": "white",
            "symbolFillColor": "white"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/data/volcano-events0-21.csv"
    },
    "params": [
        {
            "name": "type_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Caldera",
                    "Complex volcano",
                    "Stratovolcano",
                    "Submarine volcano"
                ],
                "labels": [
                    "Show All",
                    "Caldera Volcano",
                    "Complex Volcano",
                    "Stratovolcano",
                    "Submarine Volcano"
                ],
                "name": "Volcano Type Selection: "
            }
        }
    ],
    "transform": [
        {
            "filter": {
                "field": "Country",
                "equal": "Indonesia"
            }
        },
        {
            "filter": "datum.Year > 1990"
        },
        {
            "filter": "type_selection == null || datum.Type == type_selection"
        }
    ],
    "mark": {
        "type": "circle",
        "opacity": 0.3
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "axis": {
                "grid": false,
                "labelAngle": 0
            }
        },
        "size": {
            "field": "VEI",
            "type": "quantitative",
            "title": "Volcanic Explosivity Index",
            "scale": {
                "domain": [1, 2, 3, 4, 5],
                "range": [1000, 2000, 3000, 4000]
            }
        },
        "color": {
            "field": "Type",
            "type": "nominal",
            "title": "Volcano Type",
            "scale": {
                "domain": [
                    "Caldera",
                    "Complex volcano",
                    "Stratovolcano",
                    "Submarine volcano"
                ],
                "range": [
                    "#FFF9CA",
                    "#e48254",
                    "#FFB4B4",
                    "#B2A4FF"
                ]
            }
        },
        "tooltip": [
            {
                "field": "Name",
                "title": "Volcano Name",
                "type": "nominal"
            },
            {
                "field": "Type",
                "title": "Volcano Type",
                "type": "nominal"
            },
            {
                "field": "Elevation",
                "title": "Elevation (m)",
                "type": "quantitative",
                "format": ",.2f"
            },
            {
                "field": "Year",
                "title": "Eruption Year",
                "type": "ordinal"
            },
            {
                "field": "VEI",
                "title": "Volcanic Explosivity Index",
                "type": "quantitative"
            }
        ]
    },
    "background": "black"
}