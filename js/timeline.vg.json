{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 250,
    "title": "Number of Eruptions over the Year",
    "config": {
        "title": {
            "color": "white"
        },
        "axis": {
            "titleColor": "white",
            "labelColor": "white",
            "gridColor": "white",
            "domainColor": "white",
            "tickColor": "white"
        },
        "legend": {
            "titleColor": "white",
            "labelColor": "white"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/data/volcano-events0-21.csv"
    },
    "transform": [
        {
            "filter": {
                "field": "Country",
                "equal": "Indonesia"
            }
        },
        {
            "filter": "datum.Year > 1990"
        }
    ],
    "mark": {
        "type": "circle",
        "opacity": 0.3
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal",
            "axis": {
                "grid": false
            }
        },
        "size": {
            "field": "VEI",
            "type": "quantitative",
            "title": "Volcanic Explosivity Index",
            "scale": {
                "domain": [1, 2, 3, 4, 5],
                "range": [1000, 2000, 3000, 4000]
            }
        },
        "tooltip": [
            {
                "field": "Name",
                "title": "Volcano Name",
                "type": "nominal"
            },
            {
                "field": "Type",
                "title": "Volcano Type",
                "type": "nominal"
            },
            {
                "field": "Elevation",
                "title": "Elevation",
                "type": "quantitative",
                "format": ",.2f"
            },
            {
                "field": "Year",
                "title": "Eruption Year",
                "type": "ordinal"
            },
            {
                "field": "VEI",
                "title": "Volcanic Explosivity Index",
                "type": "quantitative"
            }
        ]
    },
    "background": "black"
}