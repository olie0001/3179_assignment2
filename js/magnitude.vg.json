{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Number of Eruptions per Volcanic Explosivity Index",
    "config": {
        "title": {
            "color": "white"
        },
        "axis": {
            "titleColor": "white",
            "labelColor": "white",
            "gridColor": "white",
            "domainColor": "white",
            "tickColor": "white"
        },
        "legend": {
            "titleColor": "white",
            "labelColor": "white"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/data/volcano-events0-21.csv"
    },
    "params": [
        {
            "name": "type_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Caldera",
                    "Complex volcano",
                    "Stratovolcano",
                    "Submarine volcano"
                ],
                "labels": [
                    "Show All",
                    "Caldera Volcano",
                    "Complex Volcano",
                    "Stratovolcano",
                    "Submarine Volcano"
                ],
                "name": "Volcano Type Selection: "
            }
        },
        {
            "name": "minimum_elevation",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 1000,
                "max": 3000,
                "name": "Minimum Volcano Elevation: "
            }
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "VEI",
            "type": "nominal",
            "title": "Volcanic Explosivity Index",
            "axis": {
                "labelAngle": 0
            }
        },
        "y": {
            "aggregate": "count",
            "title": "Number of Eruptions"
        },
        "tooltip": [
            {
                "field": "VEI",
                "title": "Volcanic Explosivity Index",
                "type": "nominal"
            },
            {
                "aggregate": "count",
                "title": "Number of Eruptions",
                "type": "quantitative",
                "format": ","
            }
        ]
    },
    "transform": [
        {
            "filter": {
                "field": "Country",
                "equal": "Indonesia"
            }
        },
        {
            "filter": {
                "field": "VEI",
                "range": [1,7]
            }
        },
        {
            "filter": "type_selection == null || datum.Type == type_selection"
        },
        {
            "filter": "datum.Elevation > minimum_elevation"
        }
    ],
    "background": "black"
}