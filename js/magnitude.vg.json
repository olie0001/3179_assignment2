{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Number of Eruptions per Volcanic Explosivity Index",
    "config": {
        "title": {
            "color": "white"
        },
        "axis": {
            "titleColor": "white",
            "labelColor": "white",
            "gridColor": "white",
            "domainColor": "white",
            "tickColor": "white"
        },
        "legend": {
            "titleColor": "white",
            "labelColor": "white"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/data/volcano-events0-21.csv"
    },
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "VEI",
            "type": "nominal",
            "title": "Volcanic Explosivity Index"
        },
        "y": {
            "aggregate": "count",
            "title": "Number of Eruptions"
        }
    },
    "transform": [
        {
            "filter": {
                "field": "Country",
                "equal": "Indonesia"
            }
        },
        {
            "filter": {
                "field": "VEI",
                "range": [1,7]
            }
        }
    ],
    "background": "black"
}