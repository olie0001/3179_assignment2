{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/data/volcano-events0-21.csv"
    },
    "vconcat": [
        {
            "width": 800,
            "height": 400,
            "title": "Number of Deaths based on Volcano Type",
            "projection": {
                "type": "equalEarth"
            },
            "layer": [
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "gray",
                        "stroke": "white"
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/data/volcano-events0-21.csv"
                    },
                    "mark": {
                        "type": "circle",
                        "opacity": 0.8
                    },
                    "encoding": {
                        "longitude": {
                            "field": "Longitude",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "Latitude",
                            "type": "quantitative"
                        },
                        "size": {
                            "aggregate": "sum",
                            "field": "TotalDeaths",
                            "type": "quantitative",
                            "title": "Number of Deaths",
                            "scale": {
                                "type": "threshold",
                                "domain": [10000, 20000, 30000, 40000, 50000],
                                "range": [100, 200, 400, 800, 1600]
                            },
                            "legend": {
                                "format": ".1s"
                            }
                        },
                        "color": {
                            "field": "Type",
                            "type": "nominal",
                            "title": "Volcano Type",
                            "scale": {
                                "domain": [
                                    "Caldera",
                                    "Complex volcano",
                                    "Stratovolcano",
                                    "Submarine volcano"
                                ],
                                "range": [
                                    "#FFF9CA",
                                    "#e48254",
                                    "#FFB4B4",
                                    "#B2A4FF"
                                ]
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Name",
                                "title": "Volcano Name",
                                "type": "nominal"
                            },
                            {
                                "field": "Type",
                                "title": "Volcano Type",
                                "type": "nominal"
                            },
                            {
                                "field": "Elevation",
                                "title": "Elevation",
                                "type": "quantitative",
                                "format": ",.2f"
                            },
                            {
                                "field": "TotalDeaths",
                                "title": "Number of Deaths",
                                "type": "quantitative",
                                "format": ","
                            }
                        ]
                    },
                    "transform": [
                        {
                            "filter": {
                                "field": "Country",
                                "equal": "Indonesia"
                            }
                        },
                        {
                            "filter": {
                                "param": "time_brush"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "width": 800,
            "height": 100,
            "title": "Use this to filter the data based on year",
            "mark": "line",
            "params": [
                {
                    "name": "time_brush",
                    "select": {
                        "type": "interval",
                        "encodings": ["x"]
                    }
                }
            ],
            "encoding": {
                "x": {
                    "field": "Year"
                },
                "y": {
                    "aggregate": "count"
                }
            }
        }
    ],
    "transform": [
        {
            "filter": {
                "field": "Country",
                "equal": "Indonesia"
            }
        },
        {
            "filter": "datum.Year > 1990"
        }
    ],
    "config": {
        "title": {
            "color": "white"
        },
        "axis": {
            "titleColor": "white",
            "labelColor": "white",
            "gridColor": "white",
            "domainColor": "white",
            "tickColor": "white"
        },
        "legend": {
            "titleColor": "white",
            "labelColor": "white",
            "symbolFillColor": "white"
        }
    },
    "background": "black"
}