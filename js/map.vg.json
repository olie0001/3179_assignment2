{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Number of Deaths based on Volcano Type",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/js/ne_110m_admin_0_countries.topojson",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/olie0001/3179_assignment2/main/data/volcano-events0-21.csv"
            },
            "mark": {
                "type": "circle"
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "aggregate": "sum",
                    "field": "TotalDeaths",
                    "type": "quantitative",
                    "title": "Number of Deaths",
                    "scale": {
                        "type": "threshold",
                        "domain": [10000, 20000, 30000, 40000, 50000, 60000],
                        "range": [100, 200, 300, 400, 500, 600]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "Type",
                    "type": "nominal",
                    "title": "Volcano Type",
                    "scale": {
                        "domain": [
                            "Caldera",
                            "Complex volcano",
                            "Stratovolcano",
                            "Submarine volcano"
                        ],
                        "range": [
                            "#3A6351",
                            "#F2EDD7",
                            "#A0937D",
                            "#5F939A"
                        ]
                    }
                }
            },
            "transform": [
                {
                    "filter": {
                        "field": "Country",
                        "equal": "Indonesia"
                    }
                }
            ]
        }
    ]
}